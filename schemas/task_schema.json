{\n  "$schema": "http://json-schema.org/draft-07/schema#",\n  "$id": "https://todo-f655d.firebaseapp.com/schemas/task_schema.json",\n  "title": "Task",\n  "description": "Schema for task documents in the tasks collection",\n  "type": "object",\n  "properties": {\n    "title": {\n      "type": "string",\n      "description": "Task title",\n      "minLength": 1\n    },\n    "details": {\n      "type": "string",\n      "description": "Detailed description of the task"\n    },\n    "completed": {\n      "type": "boolean",\n      "description": "Whether the task has been completed",\n      "default": false\n    },\n    "created": {\n      "type": "object",\n      "description": "Task creation timestamp",\n      "properties": {\n        "_seconds": {\n          "type": "integer"\n        },\n        "_nanoseconds": {\n          "type": "integer"\n        }\n      },\n      "required": ["_seconds", "_nanoseconds"]\n    },\n    "user": {\n      "type": "string",\n      "description": "Reference path to the user who owns this task",\n      "pattern": "^/users/[a-zA-Z0-9]+$"\n    }\n  },\n  "required": ["title", "completed", "user"],\n  "additionalProperties": false\n}